<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./layout/head'); %>
</head>

<header>
    <%- include('./layout/header'); %>
</header>

<body class="container">
    <main>
        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-2">S'enregistrer</p>

                                        <form action="/register" method="POST">
                                            <div class="form-group">
                                                <div class="form-outline mt-4">
                                                    <input type="text" name="name" id="name" class="form-control" />
                                                    <label class="form-label" for="name">Nom</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-outline mt-4">
                                                    <input type="text" name="firstName" id="firstName" class="form-control" />
                                                    <label class="form-label" for="firstName">Pr√©nom</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-outline mt-4">
                                                    <input type="text" name="username" class="form-control" />
                                                    <label class="form-label" for="username">Nom d'utilisateur</label>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-sm-12 col-lg-6">
                                                    <div class="form-outline mt-4">
                                                        <input type="text" name="password" id="password" class="form-control" />
                                                        <label class="form-label" for="password">Mot de passe</label>
                                                    </div>
                                                </div>
                                                <div class="form-group col-sm-12 col-lg-6">
                                                    <div class="form-outline mt-4">
                                                        <input type="text" name="confirmPassword" id="confirmPassword" class="form-control" />
                                                        <label class="form-label" for="confirmPassword">Confirmation</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-4">
                                                <button type="submit" class="mt-4 btn btn-block btn-primary">Enregistrer</button>
                                            </div>
                                        </form>

                                    </div>
                                    <div
                                        class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 mt-4">

                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                            class="img-fluid" alt="Sample image">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <%- include('./layout/footer'); %>
    </footer>

</body>

</html>